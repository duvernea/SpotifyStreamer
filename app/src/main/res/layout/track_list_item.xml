<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/imageview_dimen"
        android:layout_height="@dimen/imageview_dimen"
        android:id="@+id/track_list_item_albumcover"
        android:src="@android:drawable/ic_menu_gallery"

        android:layout_marginTop="@dimen/list_item_top_margin"
        android:layout_marginBottom="@dimen/list_item_bottom_margin"
        android:layout_marginRight="@dimen/imageview_right_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/track_list_item_songtitle"
                android:textSize="@dimen/track_text_size"
                android:layout_marginBottom="@dimen/track_text_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/track_list_item_albumtitle"
                android:layout_marginTop="@dimen/track_text_margin"
                android:textSize="@dimen/track_text_size"/>



    </LinearLayout>

</LinearLayout>